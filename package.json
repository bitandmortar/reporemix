{
  "name": "reporemix",
  "version": "1.0.0",
  "description": "Your GitHub forks, reimagined. Track, analyze, and visualize your repository network.",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "install:client": "cd client && npm install",
    "build": "cd client && npm run build",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:create": "node scripts/migrate.js create",
    "seed": "node scripts/seed.js",
    "sync": "node scripts/sync-repos.js",
    "test": "jest",
    "test:ci": "NODE_ENV=test jest --runInBand --coverage",
    "test:services": "NODE_ENV=test jest tests/services --runInBand",
    "test:routes": "NODE_ENV=test jest tests/routes --runInBand",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "eslint server tests --ext .js",
    "lint:client": "cd client && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "keywords": [
    "github",
    "repository",
    "analytics",
    "visualization",
    "ontology",
    "dashboard"
  ],
  "author": "bitandmortar <https://github.com/bitandmortar>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitandmortar/reporemix.git"
  },
  "bugs": {
    "url": "https://github.com/bitandmortar/reporemix/issues"
  },
  "homepage": "https://github.com/bitandmortar/reporemix#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
